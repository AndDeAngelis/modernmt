<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="%{level}" name="ModernMT" packages="" shutdownHook="disable">
    <Appenders>
        <Console name="Console" target="SYSTEM_ERR">
            <PatternLayout>
                <Pattern>%d %-5level %c [%t] %msg{nolookups} %throwable{separator(#n)}%n</Pattern>
            </PatternLayout>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="%{level}">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>